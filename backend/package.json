{
  "name": "groupmirror-backend",
  "version": "1.0.0",
  "description": "Backend API for Group Mirror mood tracking application",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --poll src/server.ts",
    "dev:mock": "node mock-server.js",
    "typecheck": "tsc --noEmit",
    "start:mock": "node mock-server.js",
    "start:open": "npm run build && node dist/server.js & start http://localhost:3001/api/docs",
    "clear-demo": "ts-node src/scripts/clear-demo-data.ts",
    "health": "powershell -NoProfile -Command \"(Invoke-WebRequest -UseBasicParsing http://localhost:3001/api/health).StatusCode\"",
    "kill:3001": "kill-port 3001"
  },
  "keywords": [
    "express",
    "typescript",
    "mood-tracking",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "groupmirror-workspace": "file:..",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.0",
    "myproject": "file:..",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.23",
    "cross-env": "^10.1.0",
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
